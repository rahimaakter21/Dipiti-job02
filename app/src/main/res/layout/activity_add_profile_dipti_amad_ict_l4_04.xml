<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="10dp"
    android:layout_margin="30dp"
    tools:context=".views_dipti_amad_ict_l4_04.AddProfileActivity_dipti_amad_ict_l4_04">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/profileNameEt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Enter Your Profile Name"
            android:background="@drawable/addtext"
            android:textColor="#009688"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/emailEt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Enter Your mail Address"
            android:background="@drawable/addtext"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/profileNameEt"
            app:layout_constraintStart_toStartOf="@id/profileNameEt"
            app:layout_constraintTop_toBottomOf="@id/profileNameEt"
            app:layout_goneMarginTop="20dp" />


        <EditText
            android:id="@+id/dobEt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:focusable="false"
            android:inputType="none"
            android:hint="Enter Your Date of Birth"
            android:background="@drawable/addtext"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/emailEt"
            app:layout_constraintStart_toStartOf="@id/emailEt"
            app:layout_constraintTop_toBottomOf="@id/emailEt"
            app:layout_goneMarginTop="20dp" />

        <EditText
            android:id="@+id/districtEt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Enter Your District"
            android:background="@drawable/addtext"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/dobEt"
            app:layout_constraintStart_toStartOf="@id/dobEt"
            app:layout_constraintTop_toBottomOf="@id/dobEt"
            app:layout_goneMarginTop="20dp" />

        <EditText
            android:id="@+id/mobileEt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Enter Your Mobile Number"
            android:background="@drawable/addtext"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/districtEt"
            app:layout_constraintStart_toStartOf="@id/districtEt"
            app:layout_constraintTop_toBottomOf="@id/districtEt"
            app:layout_goneMarginTop="20dp" />

        <Button
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="88dp"
            android:backgroundTint="#009688"
            android:text="Add "
            android:textColor="#C2F5F5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/mobileEt"
            app:layout_constraintStart_toStartOf="@id/mobileEt"
            app:layout_constraintTop_toBottomOf="@+id/mobileEt"
            app:strokeColor="#009688"
            app:strokeWidth="2dp" />




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>